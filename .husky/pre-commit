#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Get a list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|ts|tsx|json|css|md)$')

# If there are no matching files, exit
if [ -z "$STAGED_FILES" ]; then
  echo "No matching files to format."
  exit 0
fi

# Run Prettier on staged files
pnpm prettier --write $STAGED_FILES

# Run ESLint on staged files (if applicable)
pnpm eslint --fix $STAGED_FILES

# Add the formatted files back to the commit
git add $STAGED_FILES
